generator client {
    provider = "prisma-client-js"
    output   = "./generated/client2"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL_2")
}

model Client {
    // defaults
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // fields
    name        String @unique @default("Unknown")
    email       String @unique @default("Unknown")
    phoneNumber String @unique @default("0000000000") @db.VarChar(10)

    // relationships
    orders Order[]
}

model Order {
    // defaults
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // fields
    orderLocale String @default("New York")

    // relationships
    client   Client @relation(fields: [clientId], references: [id])
    clientId String
    items    Item[]
}

model Item {
    // defaults
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // fields
    price    Int    @default(0)
    category String @default("electronics")

    // relationships
    Order   Order  @relation(fields: [orderId], references: [id])
    orderId String
}
